extends layout

include mixins/_book
include mixins/_pagination

block content
  h1= title
  p
    a.button(href="/books/new") Create New Book
  p Filters 
    a(href="/books") All 
    | | 
    a(href="/books/filter/overdue") Overdue
    | | 
    a(href="/books/filter/checked") Checked Out
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in books
        +book(book)
  +pagination('books', true, query, page, pages, count)