extends layout

include mixins/_book

block content
  h1 Books
  p
    a.button(href="/books/new") Create New Book
  p Filters 
    a(href="/books/all") All 
    | | 
    a(href="/books?filter=overdue") Overdue
    | | 
    a(href="/books?filter=checked_out") Checked Out
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in books
        +book(book)
  